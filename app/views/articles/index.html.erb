<div class="container">
  <h2>Articles:</h2>
  <table>
    <tr>
      <th class="col-sm-3">Title</th>
      <th class="col-sm-6">Content</th>
      <th class="col-sm-2"></th>
    </tr>
 
    <% @articles.each do |article| %>
      <tr>
        <td class="col-sm-3"><h6><%= article.title %></h6></td>
        <td class="col-sm-6"><%= article.text %></td>
        <td class="btn-group col-sm-2">
          <%= link_to '<button type="button" class="btn btn-info">Show</button>'.html_safe, article_path(article) %>
          <%= link_to '<button type="button" class="btn btn-warning">Edit</button>'.html_safe, edit_article_path(article) %>
          <%= link_to '<button type="button" class="btn btn-danger">Delete</button>'.html_safe, article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
  
        </td>
      </tr>
    <% end %>
  </table><br><br>
  <%= link_to '<button type="button" class="btn btn-primary col-sm-4"><h5>New article</h5></button>'.html_safe, new_article_path %>
</div>